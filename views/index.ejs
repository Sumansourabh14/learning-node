<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs')  %>
</head>
<body>
    <%- include("./partials/nav.ejs") %>

    <h1>Blogs</h1>

    <% if (blogs.length > 0) { %>
        <% blogs.forEach(blog => { %>
            <a href="/blogs/<%= blog._id %>">
                <h3 class="title"><%= blog.title %></h3>
                <p class="snippet"><%= blog.snippet %></p>
            </a>
        <% }) %>
    <% } else { %>
        <p>There are no blogs :(</p>
    <% } %>

    <%- include('./partials/footer.ejs') %>
</body>
</html>